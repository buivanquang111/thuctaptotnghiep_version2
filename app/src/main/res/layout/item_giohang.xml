<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeRevealLayout"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:mode="same_level"
    app:dragEdge="right"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/linerlayout_itemgiohang"
        android:background="#F11616"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_delete"
            android:layout_width="100dp"
            android:layout_height="50dp"/>
        <TextView
            android:gravity="center"
            android:text="xóa"
            android:textColor="#fff"
            android:layout_width="100dp"
            android:layout_height="50dp"/>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:backgroundTint="#E8F8F5F5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_itemgiohang"
                android:src="@drawable/ic_launcher_background"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_title_itemgiohang"
                    android:textSize="20dp"
                    android:textColor="@color/text"
                    android:gravity="center"
                    android:text="aaaaa"
                    android:paddingRight="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>
                <TextView
                    android:id="@+id/txt_gia_itemgiohang"
                    android:textColor="#EF5050"
                    android:textSize="20dp"
                    android:text="10000"
                    android:gravity="center"
                    android:paddingRight="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:text="số lượng:"
                        android:textSize="20dp"
                        android:textColor="@color/text"
                        android:gravity="end|center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/txt_soluongmua_itemgiohang"
                        android:text="10"
                        android:textColor="@color/text"
                        android:paddingLeft="10dp"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</com.chauthai.swipereveallayout.SwipeRevealLayout>